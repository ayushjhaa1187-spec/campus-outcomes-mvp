# Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# Local MongoDB
MONGO_URI=mongodb://localhost:27017/campus-outcomes

# MongoDB Atlas (Cloud) - Uncomment and use this for production
# MONGO_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/campus-outcomes?retryWrites=true&w=majority

# Authentication
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production_min_32_chars
JWT_EXPIRE=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Email Configuration (Optional - for future features)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password
